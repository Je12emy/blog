---
interface Props {
    title: string;
    date: string;
    description: string;
}

const { title, date, description } = Astro.props;
---

<section class="flex flex-col items-start text-xl space-y-1">
    <h1 class="font-medium">{title}</h1>
    <p class="font-light">{description}</p>
    <time class="font-light text-lg text-gray-600" datetime={date}>
        {
            new Date(date).toLocaleDateString("en-us", {
                year: "numeric",
                month: "short",
                day: "numeric",
            })
        }</time
    >
</section>
