---
import BaseHead from "../components/BaseHead.astro";
import { getCollection } from "astro:content";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Main from "../layouts/Main.astro";
import Post from "../components/Post.astro";

// Use Astro.glob() to fetch all posts, and then sort them by date.

const posts = await getCollection("blog");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Main class="space-y-4 xl:space-y-8">
		<section>
			<p class="text-2xl text-center italic xl:w-4/5">
				If you are reading this, you will find my journey towards
				finding a purpose in software engineering.
			</p>
		</section>
		<h1 class="text-xl font-semibold">{">"} Latest Blog Entries</h1>
		<section class="space-y-4 xl:space-y-8">
			{
				posts
					.sort(
						(a, b) =>
							new Date(b.data.pubDate).valueOf() -
							new Date(a.data.pubDate).valueOf()
					)
					.slice(0, 5)
					.map((post) => (
						<Post
							url={`blog/${post.slug}`}
							title={post.data.title}
							date={post.data.pubDate}
							description={post.data.description}
						/>
					))
			}
		</section>
	</Main>
</html>
